<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>File Dialog</title>
  </head>
  <body>
    <h1>Choose a file or directory:</h1>
    <ul>
      <% for (let i = 0; i < files.length; i++) { %>
        <% if (types[i] === 'directory') { %>
          <li><a href="?directoryPath=<%= filepaths[i] %>"><%= files[i] %></a>/</li>
        <% } else { %>
          <li><a href="/files/selected?file=<%= files[i] %>"><%= files[i] %></a></li>
        <% } %>
      <% } %>
    </ul>
  </body>
</html>
