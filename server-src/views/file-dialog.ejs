<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>File Dialog</title>
</head>

<body>
  <h1>Choose a file or directory:</h1>
  <ul>
    <% for (let i=0; i < data.files.length; i++) { %>
      <% if (data.files[i].type === 'directory') { %>
        <li><a href="?id=<%= data.files[i].id %>">
            <%= data.files[i].name %>
          </a>/</li>
      <% } else { %>
        <li><a href="/selectFile?id=<%= data.files[i].id %>">
            <%= data.files[i].name %>
          </a></li>
      <% } %>
    <% } %>
  </ul>
</body>

</html>
